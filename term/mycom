# Anime
alias anime-conf='bash $HOME/Scripts/animdl_conf.sh'
anime-stream(){
    if [ $# -eq 2 ];then
        python3 -m animdl stream $1 -r $2
    elif [ $# -eq 1 ];then
        python3 -m animdl stream $1
    fi
}

